<div class="container">
    <div class="card" style="background-color:#18043d">
        <div class="row">
            <div class="col-3">
                <img class="img-fluid" src="@Model.Poster" />
            </div>
            <div class="col-9 style=" color:white"">
                <h1 style="color:yellow">@Model.Name</h1>



                <div class="col-10">
                    <div class="row">
                        <p style="text-align: justify">@Model.Description</p>
                    </div>

                    <div class="row ">
                        <div class="movie-infos">
                            <div class="movie-info">



                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check" viewBox="0 0 16 16">
                                    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                    <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                </svg>
                                <span>Giới hạn tuổi: <b>@Model.Ban</b> &nbsp; &nbsp; &nbsp;  </span>

                            </div>


                            <div class="movie-info">

                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                                </svg>
                                <span>Thời lượng: <b>@Model.Length</b> phút &nbsp; &nbsp; &nbsp;</span>

                            </div>
                            <div class="movie-info">

                                <img src="https://img.icons8.com/windows/20/ffffff/category.png" />
                                <span>
                                    Thể loại:  @if (Model.Genres != null)
                                    {
                        <span><b>@string.Join(" ", Model.Genres)</b></span>}
                                </span>



                            </div>



                        </div>
                    </div>
                    <div class="row" style=" padding-top: 20px">


                        <a class=" btn btn-danger mr-5" href="/Film/ScreeningInWeek/@Model.Id">Đặt vé</a>
                        <a class=" btn btn-primary" href="@Model.TrailerURL">Trailer</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
