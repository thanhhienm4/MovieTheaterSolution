                @if (film.Genres != null)
                {
<span style="color:white">@string.Join(' ', film.Genres)</span>}
            </div>
            <div class="movie-info">
                <span style="color:white">@film.Ban</span>
            </div>
        </div>
    </div>
</a>                }

            }

            <!-- END MOVIE ITEM -->
        </div>
    </div>
