@using MovieTheater.Models.Common.Paging
@using MovieTheater.Models.User
@model PageResult<UserVMD>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Scripts{
    <script>
        setTimeout(function () {
            $("#SuccessMeg").fadeOut('slow');
        }, 2000);
    </script>
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item active">Người dùng</li>
</ol>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex">
            <div class="p-2">
                <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới</a>
            </div>
            <div class="ml-auto p-2">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div>
                            <select name="roleId" onchange="this.form.submit()" asp-items="@ViewBag.Roles" class="form-control">
                            </select>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div>
                            <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Tìm</button>
                            <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-light"><img src="https://img.icons8.com/ios-filled/20/000000/rotate.png" /></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        @if (ViewBag.SuccessMsg != null)
        {
<div id="SuccessMeg" class="alert alert-success" role="alert">
    @ViewBag.SuccessMsg
</div>            }
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Tên đăng nhập
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Ngày sinh
                    </th>
                    <th>
                        Khác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item)
                {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td class="status">
            @item.Status
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>

            @Convert.ToDateTime(item.Dob).ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Edit", new { id = item.UserName }) |
            <a href="" data-toggle="modal" data-name="@item.UserName" data-target="#deleteUserUser" onclick="holdData(this)" data-id="@item.UserName">Xóa</a>&nbsp;|&nbsp;
            @Html.ActionLink("Cấp quyền", "RoleAssign", new { id = item.UserName })
        </td>
    </tr>
}
            </tbody>
        </table>
        <div class="d-flex">
            <div class="ml-auto p-2">
                @await Component.InvokeAsync("Pager", Model)
            </div>
        </div>
    </div>
</div>
<input id="nameUser" hidden />
<input id="idUser" hidden />
<!--model delete-->
<div class="modal fade" id="deleteUserUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex justify-content-center">
                    <h5 id="ModalLabel">Thông báo</h5>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="deleteMeg"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" onclick="deleteUser()">Xóa</button>
            </div>
        </div>
    </div>
</div>
<script>

    function holdData(item) {
        var name = $(item).attr("data-name");
        var id = $(item).attr("data-id");
        $("#nameUser").val(name);
        $("#idUser").val(id);
        $("#deleteMeg").text("Bạn muốn xóa " + name);
    }

    $(function () {

        $("#deleteUserUser").on('show.bs.modal', function () {
            name = $("#nameUser").val();

        });

    });

    function deleteUser() {
        var userId = $("#idUser").val();
        $.ajax({
            type: "POST",
            url: "/User/Delete",
            data: { id: userId },
            success: function () {
                location.reload();
            }
        })
    }
