@model MovieTheater.Models.Identity.Role.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="/User">Người dùng</a></li>
    <li class="breadcrumb-item active">Gán quyền</li>
</ol>
@section Scripts{
    <script>
            setTimeout(function () {
                $("#SuccessMeg").fadeOut('slow');
            }, 2000);
    </script>
}
@if (ViewBag.SuccessMsg != null)
{
    <div id="SuccessMeg" class="alert alert-success" role="alert">
        @ViewBag.SuccessMsg
    </div>}

<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <p>Nhân viên :</p><a href="/User/Edit/@ViewBag.userInfor.Id"> @ViewBag.userInfor.UserName</a>
        </div>

    </div>

    <div class="card-body">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>