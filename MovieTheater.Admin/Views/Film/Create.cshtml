@model MovieTheater.Models.Catalog.Film.FilmCreateRequest

@{ ViewData["Title"] = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Create</h1>

<h4>FilmCreateRequest</h4>
