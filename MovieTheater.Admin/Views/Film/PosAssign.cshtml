@model MovieTheater.Models.Catalog.Film.MovieVMD

@{
    ViewData["Title"] = "PosAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<buttonnk href="/css/site.css" rel="stylesheet">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/Film">Phim</a></li>
        <li class="breadcrumb-item active">Tham gia</li>
    </ol>
    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label class="control-label">Nghệ sĩ</label>
                        <select id="selectPeople" asp-items="@ViewBag.Peoples" class="form-control chosen-select"></select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Vai trò</label>
                        <select id="selectPosition" asp-items="@ViewBag.Positions" class="form-control chosen-select"></select>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button class=" btn btn-primary" id="addJoining" onclick="addJoing()">Thêm</button>
                    </div>
                </div>
                <div class="col-md">
                    <div id="joining">
                    </div>
                </div>
            </div>
        </div>
    </div>

<br />
<div>
</div>
<script>
    function loadJoining() {
        $.ajax({
            type: "Get",
            url: "/Movie/GetJoining/" + @Model.Id,

            success: function (res) {
                var str = '';
                for (var i = 0; i < res.length; i++)
                {
                    str += '<p>' + res[i].name + '</p>'
                    for (var j = 0; j < res[i].joinings.length; j++)
                    {

                        str += '<li class="btn btn-info mr-2" data-pos="' + res[i].joinings[j].posId +
                            '" data-people="' + res[i].joinings[j].peopleId +
                            '">' + res[i].joinings[j].name + '<span class="close" style="color:white">&nbsp;x</span></li>';
                    }

                }
                document.getElementById('joining').innerHTML = str;

                $('.close').click(function () {
                    var button = $(this).parent();
                    var filmId = @Model.Id;
                    var posId = $(button).attr('data-pos');
                    var peopleId = $(button).attr('data-people');
                    deleteJoing(filmId, posId, peopleId);
                });

            }
        });
    }
    function addJoing() {
        var posId = $("#selectPosition").val();
        var peopleId = $("#selectPeople").val();
        $.ajax({
            type: "Post",
            url: "/Movie/PosAssign",
            data: { filmId:@Model.Id , posId: posId, peopleId: peopleId },

            success: function (res) {

                loadJoining();

            }
        });
    }

    function deleteJoing(filmId, posId, peopleId) {

        $.ajax({
            type: "Post",
            url: "/Movie/DeletePosAssign",
            data: { filmId: filmId, posId: posId, peopleId: peopleId },

            success: function (res) {

                loadJoining();

            }
        });
    }
    $(document).ready(function () {
        loadJoining();
    });
</script>
<script src="/docsupport/jquery-3.2.1.min.js" type="text/javascript"></script>

<script src="/docsupport/prism.js" type="text/javascript" charset="utf-8"></script>
