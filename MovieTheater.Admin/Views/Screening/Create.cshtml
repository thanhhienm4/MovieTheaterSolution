@model MovieTheater.Models.Catalog.Screening.ScreeningCreateRequest

@{ ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="/Screening">Suất chiếu</a></li>
    <li class="breadcrumb-item active">Tạo mới</li>
</ol>
<hr />

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="FilmId" class="control-label"></label>
                        <div class="row">
                            <div class="col-md">
                                <select id="selectFilm" asp-for="FilmId" asp-items="@ViewBag.Films" class="form-control chosen-select"></select>
                            </div>
                           
                        </div>

                        <span asp-validation-for="FilmId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="RoomId" class="control-label"></label>
                        <select asp-for="RoomId" asp-items="@ViewBag.Rooms" class="form-control"></select>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="KindOfScreeningId" class="control-label"></label>
                        <select asp-for="KindOfScreeningId" asp-items="@ViewBag.KindOfScreenings" class="form-control"></select>
                        <span asp-validation-for="KindOfScreeningId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" value="@DateTime.Now.ToString()" class="text-danger"></span>
                    </div>
                </div>
            </div>




            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>


</div>


<script src="/docsupport/jquery-3.2.1.min.js" type="text/javascript"></script>
<script src="/chosen.jquery.js" type="text/javascript"></script>
<script src="/docsupport/prism.js" type="text/javascript" charset="utf-8"></script>
<script src="/docsupport/init.js" type="text/javascript" charset="utf-8"></script>