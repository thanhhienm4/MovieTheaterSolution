
@using MovieTheater.Models.Catalog.Screening
@model List<KindOfScreeningVMD>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="/People">Phòng</a></li>
    <li class="breadcrumb-item"><a href="/People">Định dạng phòng</a></li>
</ol>
@section Scripts{
    <script>
        setTimeout(function () {
            $("#SuccessMeg").fadeOut('slow');
        }, 2000);
    </script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex">
            <div class="p-2">
                <a class="btn btn-success" asp-action="CreateKindOfScreening" asp-controller="Screening">Tạo mới</a>
            </div>

        </div>
    </div>
    <div>
        @if (ViewBag.SuccessMsg != null)
        {
            <div id="SuccessMeg" class="alert alert-success" role="alert">
                @ViewBag.SuccessMsg
            </div>}
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        ID
                    </th>
                    <th>
                        Tên
                    </th>
                    <th>
                       Phụ phí
                    </th>
                    <th>
                        Khác
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surcharge)
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "EditKindOfScreening", new { id = item.Id }) |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex">
            <div class="ml-auto p-2">

            </div>
        </div>
    </div>
</div>

<!--model delete-->
<input id="namePeople" hidden />
<input id="idPeople" hidden />

<div class="modal fade" id="deletePeople" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex justify-content-center">
                    <h5 id="ModalLabel">Thông báo</h5>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="deleteMeg"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" onclick="deletePeople()">Xóa</button>
            </div>
        </div>
    </div>
</div>
<script>
    function holdData(item) {
        var name = $(item).attr("data-name");
        var id = $(item).attr("data-id");
        $("#namePeople").val(name);
        $("#idPeople").val(id);
        $("#deleteMeg").text("Bạn muốn xóa " + name);
    }

    $(function () {

        $("#deletePeoplePeople").on('show.bs.modal', function () {
            name = $("#namePeople").val();

        });

    });

    function deletePeople() {
        var userId = $("#idPeople").val();
        $.ajax({
            type: "POST",
            url: "/People/Delete",
            data: { id: userId },
            success: function () {
                location.reload();
            }
        })
    }
</script>