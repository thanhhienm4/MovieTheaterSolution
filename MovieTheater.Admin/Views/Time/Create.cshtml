@model MovieTheater.Models.Catalog.Price.Time.TimeCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/Time">Thời gian</a>
    </li>
    <li class="breadcrumb-item active">Tạo mới</li>
</ol>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="TimeId" class="control-label"></label>
                        <input asp-for="TimeId" class="form-control"/>
                        <span asp-validation-for="TimeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="DateStart" class="control-label"></label>
                        <div class="row">
                            <div class="col-md">
                                <select id="selectFilm" asp-for="DateStart" asp-items="@ViewBag.DateOfWeek" class="form-control chosen-select"></select>
                            </div>
                        </div>

                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="DateEnd" class="control-label"></label>
                        <select id="selectRoom" asp-for="DateEnd" asp-items="@ViewBag.DateOfWeek" class="form-control"></select>
                        <span asp-validation-for="DateEnd" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="HourStart" class="control-label"></label>
                        <input asp-for="HourStart" class="form-control" type="time"/>
                        <span asp-validation-for="HourStart" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="HourEnd" class="control-label"></label>
                        <input asp-for="HourEnd" class="form-control" type="time"/>
                        <span asp-validation-for="HourEnd" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Tạo mới" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>