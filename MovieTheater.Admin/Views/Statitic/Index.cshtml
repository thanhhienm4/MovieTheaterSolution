@model MovieTheater.Models.Common.ChartTable.CalRevenueRequest
@using MovieTheater.Models.Common.ChartTable
@using AspNetCore.Reporting 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
    <li class="breadcrumb-item active">Thống kê</li>
</ol>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex">

            <div class="ml-auto p-2">
                <form asp-action="Index" method="get">
                    <div class="row">

                        <div>
                            <input id = "startDate" asp-for="StartDate" class="form-control" type="date" />
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div>
                            <input id= "endDate" asp-for="EndDate" class="form-control" type="date" />
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Tìm</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card">
            <div class="card-header">
                Top doanh thu
            </div>
            <div class="card-body">
                @if ((ViewData["TopGroosingFilm"] as ChartData) != null)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Phim
                                    </th>
                                    <th>
                                        Doanh thu
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ChartData TopGroosingFilm = ViewData["TopGroosingFilm"] as ChartData;}
                                @for (int i = 0; i < (ViewData["TopGroosingFilm"] as ChartData).Lables.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @TopGroosingFilm.Lables[i]
                                        </td>
                                        <td>
                                            @TopGroosingFilm.DataRows[1][i];
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" onclick="dowloadPdf(@((int)RenderType.Pdf))">Tải xuống file Pdf</a>
                <a class="btn btn-primary" onclick="dowloadPdf(@((int)RenderType.Excel))">Tải xuống file Excel</a>
            </div>
        </div>
    </div>
</div>

<script>
    function dowloadPdf(mode) {
        var fileName = "report";
        var startDate = document.getElementById('startDate').value;
        var endDate = document.getElementById('endDate').value;
        $.ajax({
            type: "POST",
            url: "/Statitic/FilmRevenueReport",
            data: { startDate: startDate,endDate : endDate, renderType: mode },
            success: function (data) {
                var linkSource;
                var downloadLink;
                var fileName;

                switch (mode) {
                    case @((int)(RenderType.Pdf)) :
                        {
                            linkSource = `data:application/pdf;base64,${data}`;
                            downloadLink = document.createElement("a");
                            fileName = "TopDanhThu.pdf";
                            break;
                        }
                      case @((int)(RenderType.Excel)) :
                        {
                            linkSource = `data:application/excel;base64,${data}`;
                            downloadLink = document.createElement("a");
                            fileName = "TopDanhThu.xls";
                            break;
                        }
                }

                downloadLink.href = linkSource;
                downloadLink.download = fileName;
                downloadLink.click();

            }
        });
    }

</script>