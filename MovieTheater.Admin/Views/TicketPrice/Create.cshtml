@model MovieTheater.Models.Price.TicketPrice.TicketPriceCreateRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/SeatRow">Giá vé</a>
    </li>
    <li class="breadcrumb-item active">Tạo mới</li>
</ol>


<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="CustomerType" class="control-label"></label>
                        <select asp-for="CustomerType" asp-items="@ViewBag.Times" class="form-control" id="timeId"></select>
                        <span asp-validation-for="CustomerType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="AuditoriumFormat" class="control-label"></label>
                        <select asp-for="AuditoriumFormat" asp-items="@ViewBag.AuditoriumFormats" class="form-control" id="auditoriumFormatId"></select>
                        <span asp-validation-for="AuditoriumFormat" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="TimeId" class="control-label"></label>
                        <div class="row">
                            <div class="col-md">
                                <select asp-for="TimeId" asp-items="@ViewBag.CustomerTypes" class="form-control chosen-select" id="customerTypeId"></select>
                            </div>
                        </div>
                        <span asp-validation-for="TimeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" id="price" type="number" min="0" step="1">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="FromTime" class="control-label"></label>
                        <input asp-for="FromTime" class="form-control" type="date" id="fromTime"/>
                        <span asp-validation-for="FromTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label asp-for="ToTime" class="control-label"></label>
                        <input asp-for="ToTime" class="form-control" type="date" id="toTime"/>
                        <span asp-validation-for="ToTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div id="btnSave" class="form-group d-flex justify-content-center">
                <input type="submit" value="Tạo mới" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>